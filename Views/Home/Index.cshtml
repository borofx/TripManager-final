@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Добре дошли!</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        .container-fluid {
            padding: 0 !important;
        }

        .split-container {
            height: 100vh;
            width: 100vw;
            display: flex;
            margin: 0;
            position: relative;
        }

        .split-half {
            flex: 1;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .center-image {
            position: absolute;
            left: 50.15%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 10;
            width: 15%;
            height: 17%;
        }

        .welcome-text-container {
            position: absolute;
            top: 20%;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10;
        }

        .welcome-text {
            color: white;
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            text-align: center;
            white-space: nowrap;
        }

        .welcome-text-left {
            text-align: right;
            padding-right: 5px;
        }

        .welcome-text-right {
            text-align: left;
            padding-left: 5px;
        }

        .auth-link {
            font-size: 2rem;
            color: white;
            text-decoration: none;
            padding: 1rem 2rem;
            border: 2px solid white;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .auth-link:hover {
                background-color: white;
                color: inherit;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="split-container">
            <div class="welcome-text-container">
                <div class="welcome-text welcome-text-left">Добре дошли в</div>
                <div class="welcome-text welcome-text-right">TripManager</div>
            </div>
            <img src="@Url.Content("~/buslogo.png")" alt="Center Logo" class="center-image" />
            <div class="split-half" style="background-color: #d36135;">
                <a href="~/Identity/Account/Register" class="auth-link">Register</a>
            </div>
            <div class="split-half" style="background-color: #4ECDC4;">
                <a href="~/Identity/Account/Login" class="auth-link">Login</a>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>