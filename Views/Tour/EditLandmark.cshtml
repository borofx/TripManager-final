@model TripManager.Models.Landmark

@{
    ViewData["Title"] = "Редактирай забележителност";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Име</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Latitude">Географска ширина</label>
        <input type="number" class="form-control" id="Latitude" name="Latitude" value="@Model.Latitude" step="any" required />
    </div>
    <div class="form-group">
        <label for="Longitude">Географска дължина</label>
        <input type="number" class="form-control" id="Longitude" name="Longitude" value="@Model.Longitude" step="any" required />
    </div>
    <button type="submit" class="btn btn-primary">Запази</button>
</form>
