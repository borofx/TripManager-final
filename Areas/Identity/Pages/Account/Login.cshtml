@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = null;

}
<style>
        import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f6f8fd 0%, #e9eeff 100%);
            font-family: 'Inter', sans-serif;
            color: #2d3748;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 480px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #2d3748;
            font-size: 2rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 8px;
        }

        h2 {
            color: #718096;
            font-size: 1rem;
            font-weight: 500;
            text-align: center;
            margin-bottom: 32px;
        }

        .form-floating {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 16px;
            font-size: 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background: white;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #4299e1;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
            }

        .form-floating label {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: white;
            padding: 0 4px;
            color: #718096;
            transition: all 0.2s ease;
            pointer-events: none;
            border-radius: 5px;
        }

        .form-control:focus + label,
        .form-control:not(:placeholder-shown) + label {
            top: 0;
            font-size: 0.875rem;
            color: #4299e1;
        }

        .btn-primary {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #4299e1 0%, #667eea 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            margin-top: 20px;
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(66, 153, 225, 0.25);
            }

        .social-register {
            margin-top: 32px;
            text-align: center;
        }

            .social-register h3 {
                color: #718096;
                font-size: 0.875rem;
                font-weight: 500;
                margin-bottom: 16px;
            }

        .social-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .text-danger {
            color: #e53e3e;
            font-size: 0.875rem;
            margin-top: 4px;
        }

        hr {
            margin: 24px 0;
            border: none;
            height: 1px;
            background: #e2e8f0;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .container {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
<body>
    <div class="container">
        <h1>Login</h1>
        <h2>Log in</h2>
        <form id="loginForm" method="post">
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder=" " />
                <label for="email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder=" " />
                <label for="password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-primary">Log In</button>
        </form>

        <div class="social-register">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><h3>or Register</h3></a>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
